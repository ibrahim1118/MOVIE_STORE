
@model IdentityRole
@{
    ViewData["Title"] = "Edit";
}

<form class="w-40" asp-action="Edit" method="post">
    <h2 class="pb-10">Edit Role</h2>
    <input type="hidden" asp-for="Id"/>
    <div class="input-container">
        <label asp-for="Name" class="w-40">Genre Name</label>
        <input type="text" class="input" asp-for="Name">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Name"> </span>
    </div>

    <div class="input-container">
        <button class="btn btn-default" type="submit">Save</button>
        <a class="btn btn-sec" asp-action="Index">All records</a>
    </div>
</form>

