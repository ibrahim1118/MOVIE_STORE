@model IdentityRole
@{
    ViewData["Title"] = "Add";
}

<form class="w-40" asp-action="Add" method="post">
    <h2 class="pb-10">Add new Role</h2>
    <div class="input-container">
        <label asp-for="Name" class="w-40">Genre Name</label>
        <input type="text" class="input" asp-for="Name" required>
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Name"> </span>
    </div>

    <div class="input-container">
        <button class="btn btn-default" type="submit">Save</button>
        <a class="btn btn-sec" asp-action="Index">All records</a>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}