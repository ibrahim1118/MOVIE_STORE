@model LogInVM
@{
    ViewData["Title"] = "Login";
}

<form class="w-40" asp-action="Login" method="post">
    <h2 class="pb-10">Login</h2>
    <div class="input-container">
        <label asp-for="Email" class="w-40">Email</label>
        <input type="text" class="input" asp-for="Email">
    </div>
    <div class="message-box pd-x-28 error">
       <span asp-validation-for="Email"></span>
    </div>


    <div class="input-container">
        <label asp-for="Password" class="w-40">Password</label>
        <input type="password" class="input" asp-for="Password">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Password"></span>
    </div>
    <div class="input-container">
        <label asp-for="RememberMe" class="w-40"></label>
        <input asp-for="RememberMe">
    </div>
    <div class="input-container">
        <button class="btn btn-default" type="submit">Login</button>
        <a class="btn btn-default" asp-action="Register">Creat New Account</a>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
