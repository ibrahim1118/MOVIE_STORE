@model RegisterVM
@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<form class="w-40"  method="post">
    <div class="input-container">
        <label asp-for="Name" class="w-40">Name</label>
        <input type="text" class="input" asp-for="Name">
    </div>
    <div class="message-box pd-x-28 error">
       <span asp-validation-for="Name"></span>
    </div>
    <div class="input-container">
        <label asp-for="Email" class="w-40">Eamil</label>
        <input type="text" class="input" asp-for="Email">
    </div>
    <div class="message-box pd-x-28 error">
       <span asp-validation-for="Email"></span>
    </div>


    <div class="input-container">
        <label asp-for="Password" class="w-40">Password</label>
        <input type="password" class="input" asp-for="Password">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Password"></span>
    </div>
    <div class="input-container">
        <label asp-for="PasswordConfirm" class="w-40">Password Confirm</label>
        <input type="password" class="input" asp-for="PasswordConfirm">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="PasswordConfirm"></span>
    </div>
    <div class="input-container">
        <button class="btn btn-default" type="submit">Register</button>
       
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}