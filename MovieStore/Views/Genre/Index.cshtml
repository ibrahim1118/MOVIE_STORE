@model IEnumerable<GenreVM>
@{
    ViewData["Title"] = "Index";
}
<div class="input-container">
    <a asp-action="Add" class="btn btn-sec">Add New Genre</a>
</div>
<div class="tbl-container">
    <h2>Genre List</h2>

    <table>
        <tr>
            <th>Name</th>
            <th>Action</th>
        </tr>
        @foreach(var item in Model){
        <tr>
            <td>@item.Name</td>
            <td>
                <a asp-action="Edit" asp-route-id = "@item.Id" class="btn btn-default"><i class="fa fa-edit"></i></a>
                 <a onclick="return window.confirm('Are you sure?')" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
        }
    </table>
   
</div>
